@model KliPr.LockContext



<div id="root" style="width: 320px; margin: 69px auto; padding: 10px; border-width: 1px;">
    embeded area
</div>

<div class="pull-right thetopmargin">
    <img src="~/images/rm_box.gif" class="img-responsive">
</div>
<script src="https://cdn.auth0.com/js/lock/10.11/lock.min.js"></script>
<script>

  var lock = new Auth0Lock('@Model.ClientId', '@Model.Domain', {
      container: 'root',
      languageDictionary: {
          title: "KliPr"
      },
      theme: {
          logo: 'http://localhost:3701/images/logo.png'
      },
      allowSignUp: false,
      auth: {
      redirectUrl: '@Model.CallbackUrl',
      responseType: 'code',
      params: {
        scope: 'openid',
        state: '@Model.State' ,
        nonce: '@Model.Nonce'
      }
    }
  });

  lock.show();
</script>