@model List<KliPr.Models.Questionnaire>

@{
    ViewData["Title"] = "Besvar spørgeskema";
}
<head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
</head>
<h1 class="text-center">Besvar spørgeskema</h1>


<div>
    <form method="post" id="questioncontainer">
        <div class="form-group col-xs-4 col-xs-offset-4">
        @{
            foreach (var q in Model)
            {
                @if (q.active)
                {
                    <br />
                    <p>Hvem er du?</p>
                    foreach (var es in Enum.GetValues(typeof(KliPr.Enum.Participant)).Cast<KliPr.Enum.Participant>())
                    {
                        <div class="radio">
                            <label><input type="radio" name="participanttype_@q.Id" value=@es>@es.ToString()</label>
                        </div>
                    }

                    @foreach (var e in q.Questions)
                    {
                        <div>
                            <br />
                            @e.text
                            @if (e.type == 0)
                            {
                                @foreach (var ta in e.textanswers)
                                {
                                    if (ta.text != null)
                                    {
                                        <div class="radio">
                                            <label><input type="radio" name="textanswer_@q.Id @e.Id" value=@ta.Id>@ta.text</label>
                                        </div>

                                    }

                                }
                            }
                            @if (e.type == 1)
                            {
                                <input type="range" max=@e.t1a1 min=@e.t1a0 onchange="document.getElementById('range_@e.Id').innerHTML = this.value;"
                                        step="1" name="numberanswer_@q.Id @e.Id" id="rangeVal" value="1">
                                <em id="range_@e.Id" style="font-style: normal;">1</em>
                            }
                            <br />
                        </div>
                    }
                }
            }
        }

            <div class="row">
                <div class="text-center ">
                    <button type="submit" value="Submit" class="btn btn-primary btn-lg btnmargintop">Indsend svar</button>

                </div>
            </div>
</div>


    </form>
</div>


<script type="text/javascript">
    $(document).ready(function () {



  });
</script>












