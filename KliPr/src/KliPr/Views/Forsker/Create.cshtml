@{
    ViewData["Title"] = "Opret spørgeskema";
}
<head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
</head>
<h1 class="text-center">Opret spørgeskema</h1>
<div class="col-md-8 col-md-offset-2" >
    <form method="post" id="questioncontainer" class="col-xs-10">
        <div class="col-xs-6">
            <div class="form-group">
                <label for="name">Navn på spørgeskema:</label>
                <input class="form-control" name="name" placeholder="Navn">
                <input type="checkbox" name="name" />
            </div>
        </div>
        <br />
        <br />

        <div class="text-center col-xs-12 topmargin">
            <button type="submit" value="Submit" class="btn btn-primary btn-lg">Opret spørgeskema</button>
        </div>
    </form>
    <div class="text-center col-xs-2">
        <button class="btn btn-success btn-sm" ID="addQuestion">Tilføj spørgsmål</button>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var count = 0;
      $("#addQuestion").click(function () {
          count++;
          var html = [
                      '<div class="col-lg-12 col-xs-12"><div class="form-group">',
                      '<input class="form-control" id="name" name="',"Q"+count,'" placeholder="Indtast spørgsmål"></div></div><br />'
          ].join('');

          var innerDiv = document.createElement('div');
          innerDiv.setAttribute('class', 'post block bc2');
          innerDiv.innerHTML = html;

          questioncontainer.insertBefore(innerDiv, questioncontainer.children[questioncontainer.childElementCount-1]);

    });
  });
</script>










